{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "jsx": "react",
    "noEmit": false,
    "module": "none",
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 